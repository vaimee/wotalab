{
  "name": "wot-smart-room",
  "version": "1.0.0",
  "private": true,
  "type": "module",

  "workspaces": [
    "ui"
  ],

  "scripts": {
    "start": "npx tsx src/main.ts",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:ui\"",
    "dev:backend": "npx tsx src/main.ts",
    "dev:ui": "npm run dev --workspace=ui"
  },

  "dependencies": {
    "@node-wot/binding-http": "^0.8.15",
    "@node-wot/core": "^0.8.15"
  },

  "devDependencies": {
    "concurrently": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.4"
  }
}
